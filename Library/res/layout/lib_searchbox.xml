<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/lib_searchbox_bg">
        <EditText
        android:id="@+id/lib_searchbox_searchtext"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="@string/lib_searchbox_hint"
        android:paddingBottom="5dp"
        android:paddingLeft="40dip"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="14sp" >
    </EditText>
    
    <Button
        android:id="@+id/lib_searchbox_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/lib_searchbox_searchtext"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/lib_searchbox_clear" >
    </Button>

</RelativeLayout>